<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MailActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/oldLace"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="お問い合わせフォーム"
                    android:textSize="33dp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:textColor="@color/gray"
                    android:text="*印は必須項目です"
                    android:textSize="23dp"
                    android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@color/oldLace"
                android:orientation="vertical">
            <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:hint="会社名*"
                    android:textColor="#FF000000"
                    android:textColorHint="#FF808080"
                    android:id="@+id/company"
                    android:drawableStart="@drawable/ic_business_24dp"
                    android:drawableLeft="@drawable/ic_business_24dp"
                    android:background="@color/white"
                    android:inputType="" android:autofillHints="" tools:targetApi="o"/>

            <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:hint="部署名"
                    android:textColor="#FF000000"
                    android:textColorHint="#FF808080"
                    android:id="@+id/department"
                    android:drawableStart="@drawable/ic_business_24dp"
                    android:drawableLeft="@drawable/ic_business_24dp"
                    android:background="@color/white"
                    android:inputType="" android:autofillHints="" tools:targetApi="o"/>

            <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:hint="お名前*"
                    android:textColor="#FF000000"
                    android:textColorHint="#FF808080"
                    android:id="@+id/name"
                    android:drawableStart="@drawable/ic_person_24dp"
                    android:drawableLeft="@drawable/ic_person_24dp"
                    android:background="@color/white"
                    android:inputType="" android:autofillHints="" tools:targetApi="o"/>
            <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                <EditText
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:hint="Email*"
                        android:textColor="#FF000000"
                        android:textColorHint="#FF808080"
                        android:id="@+id/mail"
                        android:drawableStart="@drawable/ic_email_black_24dp"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:background="@color/white"
                        android:inputType="" android:autofillHints="" tools:targetApi="o"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="\@"
                        android:textSize="25dp"
                        android:textColor="@color/Black"
                        android:textStyle="bold"/>
                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/mailSpinner">
                </Spinner>
            </LinearLayout>
            <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:hint="電話番号"
                    android:textColor="#FF000000"
                    android:textColorHint="#FF808080"
                    android:id="@+id/phone"
                    android:drawableStart="@drawable/ic_phone_24dp"
                    android:drawableLeft="@drawable/ic_phone_24dp"
                    android:background="@color/white"
                    android:inputType="" android:autofillHints="" tools:targetApi="o"/>

            <EditText
                    android:layout_width="360dp"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:hint="お問い合わせ内容"
                    android:textColor="#FF000000"
                    android:textColorHint="#FF808080"
                    android:id="@+id/ask"
                    android:drawableStart="@drawable/ic_face_24dp"
                    android:drawableLeft="@drawable/ic_face_24dp"
                    android:background="@color/white"
                    android:inputType="" android:autofillHints="" tools:targetApi="o"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="17dp"
                        android:textSize="12dp"
                        android:textColor="@color/gray"
                        android:text="弊社の個人情報の取り扱いについてはこちらをご覧ください ->"
                        android:textStyle="italic"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textSize="15dp"
                        android:textColor="@color/colorAccent"
                        android:text=" here"
                        android:textStyle="bold"
                        android:id="@+id/hereButton"/>
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:text="これらにご同意いただける場合は、「同意して送信する」ボタンを押してお問い合わせください。"
                    android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/oldLace"
                android:orientation="vertical">
            <Button
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:drawableStart="@drawable/ic_send_24dp"
                    android:drawableLeft="@drawable/ic_send_24dp"
                    android:text="同意して送信する"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:id="@+id/sendButton"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>