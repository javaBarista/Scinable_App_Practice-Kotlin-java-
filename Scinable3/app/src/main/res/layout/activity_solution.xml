<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SolutionActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/oldLace">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:orientation="vertical"
                        android:background="@color/oldLace">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:text="Solution"
                            android:textColor="@color/Black"
                            android:textSize="46dp"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:text="本当に使えるマーケティングオートメーション"
                            android:textSize="15dp"
                            android:textColor="@color/gray"
                            android:textStyle="italic"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_marginTop="17dp"
                        android:background="@color/oldLace"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="★ 統合的なマーケティングオートメーションツール"
                            android:textColor="@color/Black"
                            android:textSize="13dp"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="サイト内検索・レコメンドからメール配信、WEB接客、 ABテスト、BI、広告効果分析など分析・検証から施策までトータルにPDCAが回せるソリューションです。"
                            android:textSize="12dp"
                            android:textColor="@color/gray"
                            android:textStyle="normal"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:text="★ 高パフォーマンス、低コスト"
                            android:textColor="@color/Black"
                            android:textSize="13dp"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="高パフォーマンスなシステムだから圧倒的なコストパフォーマンスでご提供します。 これまで出来なかった多様な施策をどんどんご利用いただけます。"
                            android:textSize="12dp"
                            android:textColor="@color/gray"
                            android:textStyle="normal"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:text="★ チャネルを統合した分析と施策"
                            android:textColor="@color/Black"
                            android:textSize="13dp"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="店舗情報や電話受注など、ECサイトと他のチャネルを統合したオムニチャネルコンセプトに対応しています。 外部の受注や会員情報を取り込み、分析から施策までチャネルを統合した顧客対応が可能です。"
                            android:textSize="12dp"
                            android:textColor="@color/gray"
                            android:textStyle="normal"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:background="@color/oldLace">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/grape"/>
                </LinearLayout>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:background="@color/midNightPurple"
                        android:drawableStart="@drawable/ic_mail_24dp"
                        android:drawableLeft="@drawable/ic_mail_24dp"
                        android:text="お問い合わせ"
                        android:textSize="23dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:id="@+id/mailButton"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>